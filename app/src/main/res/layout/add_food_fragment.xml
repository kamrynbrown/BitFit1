<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/Foodlabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="Food:"/>

    <EditText
        android:id="@+id/FoodName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/Foodlabel"
        app:layout_constraintTop_toTopOf="parent"
        android:hint="apple"/>

    <TextView
        android:id="@+id/Calories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/FoodName"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="Calories:"/>

    <EditText
        android:id="@+id/FoodCalories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/Calories"
        app:layout_constraintTop_toBottomOf="@id/FoodName"
        android:hint="100 calories"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/FoodCalories"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="Add Food"
        android:id="@+id/foodadd"/>

</androidx.constraintlayout.widget.ConstraintLayout>